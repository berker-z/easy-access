// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "minimap": {
    "show": "auto"
  },
  "terminal": {
    "shell": "system",
    "cursor_shape": "block",
    "font_weight": 400.0,
    "font_size": 17.0
  },
  "agent": {
    "expand_edit_card": false,
    "play_sound_when_agent_done": true,
    "notify_when_agent_waiting": "primary_screen",
    "model_parameters": []
  },

  "agent_servers": {
    "codex": {
      "default_mode": "auto"
    }
  },
  "auto_update_extensions": {
    "nord": false
  },
  "telemetry": {
    "diagnostics": true,
    "metrics": false
  },
  "base_keymap": "VSCode",
  "buffer_font_family": "Iosevka Nerd Font Mono",
  "icon_theme": {
    "mode": "dark",
    "light": "Zed (Default)",
    "dark": "Catppuccin Frapp√©"
  },

  //EXTENSIONS
  "auto_install_extensions": {
    "catppuccin-icons": true,
    "nord": true,
    "nix": true,
    "html": true,
    "git-firefly": true
  },

  //UI STUFF
  "ui_font_family": "Iosevka Nerd Font Mono",
  "ui_font_size": 17.0,
  "buffer_font_size": 18.0,
  "agent_ui_font_size": 17.0,
  "agent_buffer_font_size": 17.0,
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Nord Dark"
  },

  //FORMATTER
  "format_on_save": "on",
  "formatter": "prettier",
  "languages": {
    "Nix": {
      "formatter": {
        "external": {
          "command": "alejandra", // or "nixfmt"
          "arguments": ["--quiet", "--"]
        }
      }
    }
  }
}
